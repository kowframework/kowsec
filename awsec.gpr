with "awlib";
with "apq";

project AwSec is

	version := AwLib.version;
	
	type Supported_OS is ("Windows_NT", "GNU/Linux");

	target: Supported_OS := external("OS", "GNU/Linux");

	for Source_Dirs use ( "src" ) ;
	
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "awsec";
	case target is
		when "Windows_NT" =>
			for Library_Kind use "static";

		when "GNU/Linux" =>
			for Library_Kind use "dynamic";
	end case;
	for Library_Version use "libawsec.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("Ada") use ("-O2", "-gnat05");
	end Compiler;

	package Linker is
		for Default_Switches ( "Ada" ) use AwLib.Linker'Default_Switches( "Ada" );
	end Linker;
end AwSec;

